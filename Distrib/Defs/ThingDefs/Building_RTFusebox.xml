<?xml version="1.0" encoding="utf-8" ?>
<Buildings>

  <ThingDef>
    <defName>Building_RTFusebox</defName>
    <label>Fusebox</label>
    <description>A set of automatic fuses to prevent explosive short-circuits.</description>
    <designationCategory>Power</designationCategory>

    <category>Building</category>
    <thingClass>Building</thingClass>

    <graphicData>
      <texPath>RT_Buildings/RTFusebox</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(2,1)</drawSize>
    </graphicData>
    <drawerType>MapMeshAndRealTime</drawerType>
    <repairEffect>Repair</repairEffect>
    <constructEffect>ConstructMetal</constructEffect>
    <soundImpactDefault>BulletImpactMetal</soundImpactDefault>
    <filthLeaving>BuildingRubble</filthLeaving>

    <researchPrerequisite>RTFusebox_AdvancedFuses</researchPrerequisite>
    <size>(2,1)</size>
    <leaveResourcesWhenKilled>True</leaveResourcesWhenKilled>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <altitudeLayer>Waist</altitudeLayer>
    <passability>PassThroughOnly</passability>
    <building>
      <ignoreNeedsPower>True</ignoreNeedsPower>
    </building>
    <selectable>True</selectable>
    <rotatable>True</rotatable>
    <fillPercent>0.3</fillPercent>
    <pathCost>30</pathCost>
    <statBases>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToMake>1000</WorkToMake>
      <Flammability>1.0</Flammability>
      <Beauty>0</Beauty>
    </statBases>
    <costList>
      <Steel>50</Steel>
      <Plasteel>4</Plasteel>
    </costList>

    <comps>
      <li>
        <compClass>CompPowerTransmitter</compClass>
        <transmitsPower>True</transmitsPower>
      </li>
      <li Class="RTFusebox.CompProperties_RTFusebox">
        <compClass>RTFusebox.CompRTSurgeProtector</compClass>
        <surgeMitigation>3334</surgeMitigation>
        <reserveHealthPercent>0.1</reserveHealthPercent>
      </li>
    </comps>
  </ThingDef>

</Buildings>